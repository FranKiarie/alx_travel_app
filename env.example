# Django Configuration
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here
DEBUG=True
# Comma-separated list of allowed hosts (e.g., localhost,127.0.0.1,yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (MySQL)
# Create database: CREATE DATABASE alx_travel_db;
DB_NAME=alx_travel_db
DB_USER=root
DB_PASSWORD=your-mysql-password
DB_HOST=localhost
DB_PORT=3306

# Celery Configuration (Optional - for background tasks)
# Requires RabbitMQ: brew install rabbitmq (macOS) or apt-get install rabbitmq-server (Ubuntu)
CELERY_BROKER_URL=amqp://localhost:5672
CELERY_RESULT_BACKEND=rpc://
